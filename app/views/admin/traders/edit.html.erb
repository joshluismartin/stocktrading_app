<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-green-800 mb-2 flex items-center">
          <span class="mr-3 text-green-600">✏️</span>
          Edit Trader
        </h1>
        <p class="text-green-600">Update trader information and permissions</p>
      </div>
      <div>
        <%= link_to "← Back to Trader", admin_trader_path(@trader), class: "bg-green-100 hover:bg-green-200 text-green-800 px-4 py-2 rounded-lg font-medium transition-all duration-200" %>
      </div>
    </div>
  </div>

  <!-- Edit Form -->
  <div class="bg-white rounded-xl shadow-lg border border-green-100">
    <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4 rounded-t-xl">
      <h2 class="text-xl font-semibold text-white flex items-center">
        <span class="mr-2">📝</span>
        Trader Information
      </h2>
    </div>
    
    <div class="p-6">
      <%= form_with url: admin_trader_path(@trader), model: @trader, local: true, class: "space-y-6" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :name, class: "block text-sm font-semibold text-green-800 mb-2" %>
            <%= form.text_field :name, class: "w-full px-4 py-3 border border-green-200 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" %>
          </div>
          
          <div>
            <%= form.label :email, class: "block text-sm font-semibold text-green-800 mb-2" %>
            <%= form.email_field :email, class: "w-full px-4 py-3 border border-green-200 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" %>
          </div>
          
          <div>
            <%= form.label :status, class: "block text-sm font-semibold text-green-800 mb-2" %>
            <%= form.select :status, [["Pending", "pending"], ["Approved", "approved"]], {}, { class: "w-full px-4 py-3 border border-green-200 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" } %>
          </div>
          
          <div>
            <label class="block text-sm font-semibold text-green-800 mb-2">Admin Status</label>
            <div class="flex items-center">
              <%= form.check_box :admin, class: "w-4 h-4 text-green-600 bg-gray-100 border-gray-300 rounded focus:ring-green-500 focus:ring-2" %>
              <%= form.label :admin, "Grant admin privileges", class: "ml-2 text-sm text-green-700" %>
            </div>
          </div>
        </div>
        
        <div class="flex justify-center pt-4">
          <%= form.submit "Update Trader", class: "bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-lg font-medium transition-all duration-200 hover:shadow-md" %>
        </div>
      <% end %>
    </div>
  </div>
</div>