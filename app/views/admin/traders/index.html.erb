<div class="max-w-7xl mx-auto">
  <!-- Admin Panel Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-green-800 mb-2 flex items-center">
      <span class="mr-3 text-yellow-600">ğŸ›¡ï¸</span>
      Admin Panel
    </h1>
    <p class="text-green-600">Manage traders and monitor trading activities</p>
  </div>

  <!-- Navigation Tabs -->
  <div class="bg-white rounded-xl shadow-lg border border-green-100 mb-8">
    <div class="flex border-b border-green-100">
      <%= link_to admin_traders_path, class: "flex-1 px-6 py-4 text-center font-medium transition-all duration-200 #{'bg-green-50 text-green-700 border-b-2 border-green-500' if request.path.include?('traders')} hover:bg-green-50" do %>
        <span class="mr-2">ğŸ‘¥</span>
        Traders Management
      <% end %>
      <%= link_to admin_trades_path, class: "flex-1 px-6 py-4 text-center font-medium transition-all duration-200 #{'bg-green-50 text-green-700 border-b-2 border-green-500' if request.path.include?('trades')} hover:bg-green-50" do %>
        <span class="mr-2">ğŸ“Š</span>
        Trades Overview
      <% end %>
    </div>
  </div>

  <!-- Traders Content -->
  <div class="bg-white rounded-xl shadow-lg border border-green-100">
    <!-- Header with Actions -->
    <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4 rounded-t-xl">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-white flex items-center">
          <span class="mr-2">ğŸ‘¥</span>
          All Traders
          <span class="ml-2 bg-green-500 text-white px-2 py-1 rounded-full text-sm"><%= @traders.count %></span>
        </h2>
        <div class="flex space-x-3">
          <%= link_to "Add New Trader", new_admin_trader_path, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 hover:shadow-md" %>
          <%= link_to "Pending Approvals", pending_admin_traders_path, class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 hover:shadow-md" %>
        </div>
      </div>
    </div>

    <!-- Traders Table -->
    <% if @traders.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-green-50">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Trader Info</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Status</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Balance</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Role</th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-green-800">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-green-100">
            <% @traders.each_with_index do |trader, index| %>
              <tr class="hover:bg-green-50 transition-colors duration-200 <%= index.even? ? 'bg-white' : 'bg-green-25' %>">
                <td class="px-6 py-4">
                  <div>
                    <p class="font-medium text-green-800">
                      <%= trader.name.present? ? trader.name : trader.email.split('@').first.capitalize %>
                    </p>
                    <p class="text-sm text-green-600"><%= trader.email %></p>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="px-3 py-1 rounded-full text-sm font-medium
                    <%= trader.status == 'approved' ? 'bg-green-100 text-green-800' : 
                        trader.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                        'bg-red-100 text-red-800' %>">
                    <%= trader.status.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-semibold text-green-900"><%= number_to_currency(trader.balance) %></span>
                </td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 rounded text-sm font-medium
                    <%= trader.admin? ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= trader.admin? ? 'Admin' : 'Trader' %>
                  </span>
                </td>
                <td class="px-6 py-4 text-center">
                  <div class="flex justify-center space-x-2">
                    <%= link_to "View", admin_trader_path(trader), class: "bg-blue-100 hover:bg-blue-200 text-blue-800 px-3 py-1 rounded text-sm font-medium transition-all duration-200" %>
                    <%= link_to "Edit", edit_admin_trader_path(trader), class: "bg-green-100 hover:bg-green-200 text-green-800 px-3 py-1 rounded text-sm font-medium transition-all duration-200" %>
                    <% if trader.status == "pending" %>
                      <%= link_to "Approve", approve_admin_trader_path(trader), data: { turbo_method: :patch }, class: "bg-yellow-100 hover:bg-yellow-200 text-yellow-800 px-3 py-1 rounded text-sm font-medium transition-all duration-200" %>
                    <% end %>
                    <%= link_to "Delete", admin_trader_path(trader), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trader?" }, class: "bg-red-100 hover:bg-red-200 text-red-800 px-3 py-1 rounded text-sm font-medium transition-all duration-200" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <div class="text-6xl mb-4">ğŸ‘¥</div>
        <h3 class="text-xl font-semibold text-green-800 mb-2">No traders found</h3>
        <p class="text-green-600 mb-4">Start by adding your first trader to the system.</p>
        <%= link_to "Add First Trader", new_admin_trader_path, class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200" %>
      </div>
    <% end %>
  </div>
</div>
