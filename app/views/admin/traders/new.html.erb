<h1>New Trader</h1>
<%= form_with model: [:admin, @trader], local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.select :status, [["Pending", "pending"], ["Approved", "approved"]] %>
  </div>
  <div>
    <%= form.submit "Create Trader" %>
  </div>
<% end %>
