<h1>Trader Details</h1>
<p>Email: <%= @trader.email %></p>
<p>Status: <%= @trader.status %></p>
<p>Joined: <%= @trader.created_at.strftime("%Y-%m-%d") %></p>
<%= link_to "Back to Traders", admin_traders_path %>
<% if @trader.status == "pending" %>
  | <%= link_to "Approve", approve_admin_trader_path(@trader), method: :patch %>
<% end %>
<%= link_to "Delete", admin_trader_path(@trader), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
