<div class="max-w-7xl mx-auto">
  <!-- Admin Panel Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-green-800 mb-2 flex items-center">
      <span class="mr-3 text-yellow-600">🛡️</span>
      Admin Panel
    </h1>
    <p class="text-green-600">Manage traders and monitor trading activities</p>
  </div>

  <!-- Navigation Tabs -->
  <div class="bg-white rounded-xl shadow-lg border border-green-100 mb-8">
    <div class="flex border-b border-green-100">
      <%= link_to admin_traders_path, class: "flex-1 px-6 py-4 text-center font-medium transition-all duration-200 #{'bg-green-50 text-green-700 border-b-2 border-green-500' if request.path.include?('traders')} hover:bg-green-50" do %>
        <span class="mr-2">👥</span>
        Traders Management
      <% end %>
      <%= link_to admin_trades_path, class: "flex-1 px-6 py-4 text-center font-medium transition-all duration-200 #{'bg-green-50 text-green-700 border-b-2 border-green-500' if request.path.include?('trades')} hover:bg-green-50" do %>
        <span class="mr-2">📊</span>
        Trades Overview
      <% end %>
    </div>
  </div>

  <!-- Trades Content -->
  <div class="bg-white rounded-xl shadow-lg border border-green-100">
    <!-- Header with Search -->
    <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4 rounded-t-xl">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-white flex items-center">
          <span class="mr-2">📊</span>
          All Trades
          <span class="ml-2 bg-green-500 text-white px-2 py-1 rounded-full text-sm"><%= @trades.respond_to?(:total_count) ? @trades.total_count : @trades.count %></span>
        </h2>
      </div>
      
      <!-- Search Form -->
      <%= form_with url: admin_trades_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-3 gap-4" do |form| %>
        <div>
          <%= form.label :symbol, "Stock Symbol", class: "block text-sm font-medium text-green-100 mb-1" %>
          <%= form.text_field :symbol, value: params[:symbol], placeholder: "e.g. AAPL", class: "w-full px-3 py-2 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
        </div>
        <div>
          <%= form.label :email, "Trader Email", class: "block text-sm font-medium text-green-100 mb-1" %>
          <%= form.text_field :email, value: params[:email], placeholder: "trader@example.com", class: "w-full px-3 py-2 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
        </div>
        <div class="flex items-end">
          <%= form.submit "Search Trades", class: "w-full bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 hover:shadow-md" %>
        </div>
      <% end %>
    </div>

    <!-- Trades Table -->
    <% if @trades.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-green-50">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Date & Time</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Trader</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Stock</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Type</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Quantity</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Price</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Total Value</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-green-100">
            <% @trades.each_with_index do |trade, index| %>
              <tr class="hover:bg-green-50 transition-colors duration-200 <%= index.even? ? 'bg-white' : 'bg-green-25' %>">
                <td class="px-6 py-4">
                  <div>
                    <p class="font-medium text-green-800"><%= trade.created_at.strftime("%Y-%m-%d") %></p>
                    <p class="text-sm text-green-600"><%= trade.created_at.strftime("%H:%M") %></p>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div>
                    <p class="font-medium text-green-800">
                      <%= trade.user.name.present? ? trade.user.name : trade.user.email.split('@').first.capitalize %>
                    </p>
                    <p class="text-sm text-green-600"><%= trade.user.email %></p>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div>
                    <p class="font-bold text-green-800"><%= trade.stock.symbol %></p>
                    <p class="text-sm text-green-600"><%= trade.stock.name %></p>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="px-3 py-1 rounded-full text-sm font-medium
                    <%= trade.trade_type == 'buy' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= trade.trade_type == 'buy' ? '↑ Buy' : '↓ Sell' %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-semibold text-green-900"><%= number_with_delimiter(trade.quantity) %></span>
                  <span class="text-sm text-green-600">shares</span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-semibold text-green-900"><%= number_to_currency(trade.price) %></span>
                  <span class="text-sm text-green-600">per share</span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-bold text-green-900 text-lg"><%= number_to_currency(trade.price * trade.quantity) %></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if @trades.respond_to?(:current_page) %>
        <div class="px-6 py-4 border-t border-green-100">
          <div class="flex justify-center">
            <%= paginate @trades, class: "flex space-x-2" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="p-12 text-center">
        <div class="text-6xl mb-4">📊</div>
        <h3 class="text-xl font-semibold text-green-800 mb-2">No trades found</h3>
        <% if params[:symbol].present? || params[:email].present? %>
          <p class="text-green-600 mb-4">No trades match your search criteria. Try adjusting your filters.</p>
          <%= link_to "Clear Filters", admin_trades_path, class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200" %>
        <% else %>
          <p class="text-green-600 mb-4">No trading activity yet. Trades will appear here once users start trading.</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
