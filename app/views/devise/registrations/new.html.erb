<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-green-100">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="flex justify-center mb-4">
        <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center">
          <span class="text-white font-bold text-2xl">$</span>
        </div>
      </div>
      <h2 class="text-3xl font-bold text-green-800">Join StockBit!</h2>
      <p class="text-green-600 mt-2">Create your trading account today</p>
    </div>
    <div class="bg-white rounded-xl shadow-lg p-8 border border-green-100">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-green-700 mb-2" %>
          <%= f.text_field :name, autofocus: true,
              class: "w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200",
              placeholder: "Enter your full name" %>
        </div>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-green-700 mb-2" %>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200",
              placeholder: "Enter your email" %>
        </div>
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-green-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200",
              placeholder: "Create a password" %>
          <p class="text-xs text-green-600 mt-1">Minimum 6 characters</p>
        </div>
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-green-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200",
              placeholder: "Confirm your password" %>
        </div>
        <div>
          <%= f.submit "Create Account", class: "w-full bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white py-3 px-4 rounded-lg font-medium transition-all duration-200 hover:shadow-lg transform hover:-translate-y-0.5" %>
        </div>
      <% end %>
      <div class="mt-6 text-center">
        <div class="text-green-600">
          Already have an account? 
          <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-green-700 hover:text-green-900" %>
        </div>
      </div>
    </div>
  </div>
</div>
