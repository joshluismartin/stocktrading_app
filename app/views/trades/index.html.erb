<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-green-800 mb-2 flex items-center">
      <span class="mr-3 text-green-600">ğŸ’¹</span>
      My Trading History
    </h1>
    <p class="text-green-600">Track and analyze all your trading activities</p>
  </div>

  <!-- Filter Tabs -->
  <div class="bg-white rounded-xl shadow-lg border border-green-100 mb-8">
    <div class="flex border-b border-green-100">
      <%= link_to trades_path, class: "flex-1 px-6 py-4 text-center font-medium transition-all duration-200 #{params[:type].blank? ? 'bg-green-50 text-green-700 border-b-2 border-green-500' : 'text-green-600 hover:bg-green-50'}" do %>
        <span class="mr-2">ğŸ“‹</span>
        All Trades
      <% end %>
      <%= link_to trades_path(type: 'buy'), class: "flex-1 px-6 py-4 text-center font-medium transition-all duration-200 #{params[:type] == 'buy' ? 'bg-green-50 text-green-700 border-b-2 border-green-500' : 'text-green-600 hover:bg-green-50'}" do %>
        <span class="mr-2">â†‘</span>
        Buy Orders
      <% end %>
      <%= link_to trades_path(type: 'sell'), class: "flex-1 px-6 py-4 text-center font-medium transition-all duration-200 #{params[:type] == 'sell' ? 'bg-green-50 text-green-700 border-b-2 border-green-500' : 'text-green-600 hover:bg-green-50'}" do %>
        <span class="mr-2">â†“</span>
        Sell Orders
      <% end %>
    </div>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
    <div class="bg-white rounded-xl p-6 shadow-lg border border-green-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-600 text-sm font-medium">Total Trades</p>
          <p class="text-2xl font-bold text-green-800"><%= @trades.count %></p>
        </div>
        <div class="text-3xl text-green-500">ğŸ“Š</div>
      </div>
    </div>
    
    <div class="bg-white rounded-xl p-6 shadow-lg border border-green-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-600 text-sm font-medium">Shares Bought</p>
          <p class="text-2xl font-bold text-green-800"><%= number_with_delimiter(@total_buys) %></p>
        </div>
        <div class="text-3xl text-green-500">â†‘</div>
      </div>
    </div>
    
    <div class="bg-white rounded-xl p-6 shadow-lg border border-green-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-600 text-sm font-medium">Shares Sold</p>
          <p class="text-2xl font-bold text-green-800"><%= number_with_delimiter(@total_sells) %></p>
        </div>
        <div class="text-3xl text-red-500">â†“</div>
      </div>
    </div>
    
    <div class="bg-white rounded-xl p-6 shadow-lg border border-green-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-600 text-sm font-medium">Total Spent</p>
          <p class="text-2xl font-bold text-green-800"><%= number_to_currency(@total_spent) %></p>
        </div>
        <div class="text-3xl text-red-500">ğŸ’¸</div>
      </div>
    </div>
    
    <div class="bg-white rounded-xl p-6 shadow-lg border border-green-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-600 text-sm font-medium">Total Earned</p>
          <p class="text-2xl font-bold text-green-800"><%= number_to_currency(@total_earned) %></p>
        </div>
        <div class="text-3xl text-green-500">ğŸ’°</div>
      </div>
    </div>
  </div>

  <!-- Search and Trades Table -->
  <div class="bg-white rounded-xl shadow-lg border border-green-100">
    <!-- Search Header -->
    <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4 rounded-t-xl">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-white flex items-center">
          <span class="mr-2">ğŸ”</span>
          Trade History
        </h2>
      </div>
      
      <!-- Search Form -->
      <%= form_with url: trades_path, method: :get, local: true, class: "flex items-end space-x-4" do |form| %>
        <div class="flex-1">
          <%= form.label :symbol, "Filter by Stock Symbol", class: "block text-sm font-medium text-green-100 mb-1" %>
          <%= form.text_field :symbol, value: params[:symbol], placeholder: "e.g. AAPL", class: "w-full px-3 py-2 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
        </div>
        <div>
          <%= form.submit "Search Trades", class: "bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-lg font-medium transition-all duration-200 hover:shadow-md" %>
        </div>
      <% end %>
    </div>

    <!-- Trades Table -->
    <% if @trades.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-green-50">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Date & Time</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Stock</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Type</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Quantity</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Price</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-green-800">Total Value</th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-green-800">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-green-100">
            <% @trades.each_with_index do |trade, index| %>
              <tr class="hover:bg-green-50 transition-colors duration-200 <%= index.even? ? 'bg-white' : 'bg-green-25' %>">
                <td class="px-6 py-4">
                  <div>
                    <p class="font-medium text-green-800"><%= trade.created_at.strftime("%B %d, %Y") %></p>
                    <p class="text-sm text-green-600"><%= trade.created_at.strftime("%I:%M %p") %></p>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div>
                    <p class="font-bold text-green-800"><%= trade.stock.symbol %></p>
                    <p class="text-sm text-green-600"><%= trade.stock.name %></p>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="px-3 py-1 rounded-full text-sm font-medium
                    <%= trade.trade_type == 'buy' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= trade.trade_type == 'buy' ? 'â†‘ Buy' : 'â†“ Sell' %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-semibold text-green-900"><%= number_with_delimiter(trade.quantity) %></span>
                  <span class="text-sm text-green-600">shares</span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-semibold text-green-900"><%= number_to_currency(trade.price) %></span>
                  <span class="text-sm text-green-600">per share</span>
                </td>
                <td class="px-6 py-4">
                  <span class="font-bold text-green-900 text-lg"><%= number_to_currency(trade.price * trade.quantity) %></span>
                </td>
                <td class="px-6 py-4 text-center">
                  <%= link_to "View Details", trade_path(trade), class: "bg-green-100 hover:bg-green-200 text-green-800 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 hover:shadow-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if @trades.respond_to?(:current_page) %>
        <div class="px-6 py-4 border-t border-green-100">
          <div class="flex justify-center">
            <%= paginate @trades, class: "flex space-x-2" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="p-12 text-center">
        <div class="text-6xl mb-4">ğŸ’¹</div>
        <h3 class="text-xl font-semibold text-green-800 mb-2">No trades found</h3>
        <% if params[:symbol].present? %>
          <p class="text-green-600 mb-4">No trades found for symbol "<%= params[:symbol].upcase %>". Try a different search.</p>
          <%= link_to "Clear Search", trades_path, class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200" %>
        <% else %>
          <p class="text-green-600 mb-4">You haven't made any trades yet. Start trading to see your history here!</p>
          <%= link_to "Browse Stocks", stocks_path, class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
