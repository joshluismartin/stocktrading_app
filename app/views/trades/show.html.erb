<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl font-bold text-green-800 flex items-center">
        <span class="mr-3 text-green-600">üíπ</span>
        Trade Details
      </h1>
      <%= link_to trades_path, class: "bg-green-100 hover:bg-green-200 text-green-800 px-4 py-2 rounded-lg font-medium transition-all duration-200 flex items-center" do %>
        <span class="mr-2">‚Üê</span>
        Back to Trades
      <% end %>
    </div>
    <p class="text-green-600 mt-2">Transaction
  </div>

  <!-- Trade Details Card -->
  <div class="bg-white rounded-xl shadow-lg border border-green-100 overflow-hidden">
    <!-- Header with Trade Type -->
    <div class="bg-gradient-to-r <%= @trade.trade_type == 'buy' ? 'from-green-600 to-green-700' : 'from-red-600 to-red-700' %> px-6 py-4">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-white flex items-center">
          <span class="mr-2"><%= @trade.trade_type == 'buy' ? '‚Üë' : '‚Üì' %></span>
          <%= @trade.trade_type.capitalize %> Order
        </h2>
        <span class="bg-white bg-opacity-20 text-white px-3 py-1 rounded-full text-sm font-medium">
          <%= @trade.created_at.strftime("%B %d, %Y") %>
        </span>
      </div>
    </div>

    <!-- Trade Information -->
    <div class="p-6">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Left Column -->
        <div class="space-y-6">
          <!-- Stock Information -->
          <div class="bg-green-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-green-800 mb-3 flex items-center">
              <span class="mr-2">üìä</span>
              Stock Information
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Symbol:</span>
                <span class="font-bold text-green-900 text-lg"><%= @trade.stock.symbol %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Company:</span>
                <span class="font-medium text-green-800"><%= @trade.stock.name %></span>
              </div>
            </div>
          </div>

          <!-- Transaction Details -->
          <div class="bg-green-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-green-800 mb-3 flex items-center">
              <span class="mr-2">üí∞</span>
              Transaction Details
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Quantity:</span>
                <span class="font-bold text-green-900"><%= number_with_delimiter(@trade.quantity) %> shares</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Price per Share:</span>
                <span class="font-bold text-green-900"><%= number_to_currency(@trade.price) %></span>
              </div>
              <div class="border-t border-green-200 pt-3">
                <div class="flex justify-between items-center">
                  <span class="text-green-600 font-medium text-lg">Total Value:</span>
                  <span class="font-bold text-green-900 text-xl"><%= number_to_currency(@trade.price * @trade.quantity) %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="space-y-6">
          <!-- Timestamp Information -->
          <div class="bg-green-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-green-800 mb-3 flex items-center">
              <span class="mr-2">üï∞Ô∏è</span>
              Timing
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Date:</span>
                <span class="font-medium text-green-800"><%= @trade.created_at.strftime("%B %d, %Y") %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Time:</span>
                <span class="font-medium text-green-800"><%= @trade.created_at.strftime("%I:%M %p") %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Time Ago:</span>
                <span class="font-medium text-green-800"><%= time_ago_in_words(@trade.created_at) %> ago</span>
              </div>
            </div>
          </div>

          <!-- Trade Impact -->
          <div class="bg-green-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-green-800 mb-3 flex items-center">
              <span class="mr-2">üìà</span>
              Impact
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Type:</span>
                <span class="px-3 py-1 rounded-full text-sm font-medium
                  <%= @trade.trade_type == 'buy' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= @trade.trade_type == 'buy' ? '‚Üë Purchase' : '‚Üì Sale' %>
                </span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-green-600 font-medium">Balance Impact:</span>
                <span class="font-medium <%= @trade.trade_type == 'buy' ? 'text-red-600' : 'text-green-600' %>">
                  <%= @trade.trade_type == 'buy' ? '-' : '+' %><%= number_to_currency(@trade.price * @trade.quantity) %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="mt-8 pt-6 border-t border-green-200">
        <div class="flex justify-center space-x-4">
          <%= link_to trades_path, class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:shadow-md" do %>
            <span class="mr-2">üìã</span>
            View All Trades
          <% end %>
          <%= link_to portfolio_path, class: "bg-green-100 hover:bg-green-200 text-green-800 px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:shadow-md" do %>
            <span class="mr-2">üíº</span>
            View Portfolio
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
